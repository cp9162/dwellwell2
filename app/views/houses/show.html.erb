<p id="notice"><%= notice %></p>

<h2>Chores:</h2>
<h3><%= @house.chores.size %></h3>
<% if @house.chores.size > 0 %>
  <% for chore in @house.chores %>
    <h3 chore-id="<%= chore.id %>" class="<%= chore.is_done ? "done" : '' %>">
    	<%= check_box_tag :is_done, 'yes', chore.is_done %>
    	<%= chore.title %> :
    	<%= @roommates.each do |r| %>
    		<% r.read_attribute(:email) %>
    	<% end %>
    	<span>&times;</span>
  </h3>
  <% end %>
<% end %>


<%= link_to 'New Chore', new_chore_path(@house), :rel => 'facebox', :class => 'button' %> 
